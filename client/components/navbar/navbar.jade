div.navbar.navbar-default.navbar-static-top(ng-controller='NavbarCtrl')
    div.container
        div.navbar-header
            button.navbar-toggle.collapsed(data-toggle='collapse', data-target='#navbar-main')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand(href='/home') Volunteasy

        div#navbar-main.navbar-collapse.collapse
            ul.nav.navbar-nav
                li(ng-show='isLoggedIn()')
                    a(ng-href='/dashboard') Dashboard

                li(ng-show='isLoggedIn()')
                    a(ng-href='/create/group') Create Group

                li(ng-show='isAdmin()', ng-class='{active: isActive("/admin")}')
                    a(href='/admin') Admin

            ul.nav.navbar-nav.navbar-right
                li(ng-hide='isLoggedIn()', ng-class='{active: isActive("/signup")}')
                    a(href='/signup') Sign up

                li(ng-hide='isLoggedIn()', ng-class='{active: isActive("/login")}')
                    a(href='/login') Login

                li(ng-show='isLoggedIn()')
                    a.dropdown-toggle.cursor-pointer(data-toggle='dropdown', role='button') {{getCurrentUser().name}}
                        | &nbsp
                        span.caret
                    ul.dropdown-menu
                        li(ng-show='isLoggedIn()', ng-class='{active: isActive("/users/{{getCurrentUser()._id}}")}')
                            a(href='/users/{{getCurrentUser()._id}}')
                                span.glyphicon.glyphicon-user
                                | &nbsp Profile

                        li(ng-show='isLoggedIn()', ng-class='{active: isActive("/settings")}')
                            a(href='/settings')
                                span.glyphicon.glyphicon-cog
                                | &nbsp Settings

                        li(ng-show='isLoggedIn()', ng-class='{active: isActive("/logout")}')
                            a(href='', ng-click='logout()') Logout
